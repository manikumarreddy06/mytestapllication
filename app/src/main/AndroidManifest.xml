<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.labhyam.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/splash_image"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/splash_image"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        android:usesCleartextTraffic="true">
        <activity android:name="com.labhyam.app.StorelistActivity"></activity>

        <activity android:name="com.labhyam.app.StoreCreationActivity"></activity>

        <activity android:name="com.labhyam.app.ProductAdditionActivity" />
        <activity
            android:name="com.labhyam.app.MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name="com.labhyam.app.ProfitActivity" />
        <activity android:name="com.labhyam.app.outactivity" />
        <activity android:name="com.labhyam.app.inventoryapprovalactivity" />
        <activity android:name="com.labhyam.app.InventoryActivity" />
        <activity android:name="com.labhyam.app.HomepageActivity" />
        <activity android:name="com.labhyam.app.ProfitdetailsActivity" />
        <activity android:name="com.labhyam.app.inward.InwardProductActivity" />
        <activity android:name="com.labhyam.app.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.labhyam.app.ScannerActivity" />
        <activity android:name="com.labhyam.app.inward.CheckoutActivity" />
        <activity android:name="com.labhyam.app.ShareActivity" />
    </application>

</manifest>