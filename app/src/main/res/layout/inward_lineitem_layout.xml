<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/idProductImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/splash_image"/>
    <TextView
        android:id="@+id/idProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="checchi"
        android:layout_toRightOf="@id/idProductImage"
        android:textColor="@color/colorPrimary"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/margin_10dp"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"

        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="checchi"
            android:layout_below="@id/idProductImage"
            android:layout_margin="5dp"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_horizontal"
            android:textSize="15dp"/>
    <TextView
        android:id="@+id/tvProcprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="checchi"
        android:layout_below="@id/idProductImage"
        android:textColor="@color/colorPrimary"
        android:layout_margin="5dp"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"/>


    <TextView
        android:id="@+id/tvSellingPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="checchi"
        android:layout_below="@id/idProductImage"
        android:layout_margin="5dp"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"/>
    </LinearLayout>
</RelativeLayout>