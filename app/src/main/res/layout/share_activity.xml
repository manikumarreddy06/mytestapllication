<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/appBarLayout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#730099"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back_arrow" />

        <TextView
            android:id="@+id/tvstoreactivity"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#730099"
            android:gravity="center"
            android:text="Thank You Page"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rellayout1"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvthanks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Thank you for your Order">
        </TextView>


        <LinearLayout
            android:id="@+id/lllayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/tvthanks"
            android:orientation="horizontal"
            android:layout_weight="2">
            <Button
                android:id="@+id/btnShare"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/plbuttondesign2"
                android:text="Share Bill"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                />

            <Button
                android:id="@+id/btnHome"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/plbuttondesign2"
                android:text="Home Page"
                android:textColor="@color/black"
                android:textSize="20sp"
                />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>